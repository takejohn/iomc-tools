	"license": "MIT",
	"packageManager": "pnpm@10.22.0",
	"type": "module",
	"scripts": {
		"dev": "concurrently --names backend,frontend \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
		"lint": "pnpm -r run lint",
		"lint-only": "pnpm -r run lint-only",
		"build": "pnpm --filter=backend run build && pnpm --filter=api-sdk run build && pnpm --filter=frontend run build",
		"start": "pnpm --filter backend start",
		"prepare": "husky"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@stylistic/eslint-plugin": "^5.5.0",
		"@typescript-eslint/eslint-plugin": "^8.46.3",
		"@typescript-eslint/parser": "^8.46.3",
		"concurrently": "^9.2.1",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"husky": "^9.1.7",
		"typescript-eslint": "^8.46.3"
	}
}
